<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
 
<ScrollView 
    android:id="@+id/gc_scrollView2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/runapp_save"
    android:layout_above="@+id/llad_gc"
    android:padding="7dp"
    >

<LinearLayout
    android:id="@+id/gc_all2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

<TextView
        android:id="@+id/gc_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gesture_create_all"
        />

<TextView
    android:id="@+id/gc_txt2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:text="---" />
    
<LinearLayout 
    android:id="@+id/gc_ll_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:orientation="vertical"
    >
</LinearLayout>

<Button
        android:id="@+id/gc_btn_create"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickAdd"
        android:text="@string/gesture_create_add"
        />
    
<LinearLayout
    android:id="@+id/gc_ll_all"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
</LinearLayout>

</LinearLayout>
</ScrollView>
<LinearLayout
    android:id="@+id/llad_gc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
    android:orientation="vertical" >
    
</LinearLayout>
</RelativeLayout>
