<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >
<LinearLayout
    android:id="@+id/llad_clipsync"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical" >
    
</LinearLayout>

<ScrollView
    android:id="@+id/cs_scroll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_above="@id/llad_clipsync"
     >
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:layout_above ="@+id/llad_clipsync"
    android:orientation="vertical" >
    
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:text="@string/cs_ann"
    android:textColor="#0f0" 
    />

<CheckBox
    android:id="@+id/cs_cb1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="@string/cs_cb1"
    />

<CheckBox
    android:id="@+id/cs_cb2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="@string/cs_cb2"
    />

<CheckBox
    android:id="@+id/cs_cb3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="@string/cs_cb3"
    />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#98FB98" 
    android:text="@string/cs_cb3_desc"
    />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="@string/cs_time"
    />

<LinearLayout 
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content" 
	  android:id="@+id/cs_lldur"
	  android:gravity="right"
	  android:orientation="horizontal"
    >

    <Button
        android:id="@+id/cs_def_dur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left" 
  	    android:text="@string/def" 
        />

	<com.jbak2.ctrl.IntEditor
	  android:id="@+id/cs_dur"
	  android:layout_gravity="center_horizontal"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content" 
	  />  
    
</LinearLayout>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="@string/cs_size"
    />

<LinearLayout 
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content" 
	  android:id="@+id/cs_llsize"
	  android:gravity="right"
	  android:orientation="horizontal"
    >

    <Button
        android:id="@+id/cs_def_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left" 
  	    android:text="@string/def" 
        />

	<com.jbak2.ctrl.IntEditor
	  android:id="@+id/cs_size"
	  android:layout_gravity="center_horizontal"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content" 
	  />  
    
</LinearLayout>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="@string/cs_cnt_rec"
    />

<LinearLayout 
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content" 
	  android:id="@+id/cs_llcnt"
	  android:gravity="right"
	  android:orientation="horizontal"
    >

    <Button
        android:id="@+id/cs_def_cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left" 
  	    android:text="@string/def" 
        />

	<com.jbak2.ctrl.IntEditor
	  android:id="@+id/cs_cnt"
	  android:layout_gravity="center_horizontal"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content" 
	  />  
    
</LinearLayout>

<Button 
    android:id="@+id/cs_start"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:paddingLeft="100dp"
    android:paddingRight="100dp"
    android:layout_marginBottom="30dp"
    android:layout_gravity="center_horizontal"
	/> 
</LinearLayout>
</ScrollView>>
</RelativeLayout>
