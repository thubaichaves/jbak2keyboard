<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
 
<LinearLayout
    android:id="@+id/llad_mm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
</LinearLayout>

<ScrollView 
    android:id="@+id/mainmenu_sv"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/llad_mm"
    android:layout_above="@+id/mainmenu_cb1"
    android:padding="7dp"
    >
<LinearLayout 
    android:id="@+id/mainmenu_llmain"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:layout_alignParentTop="true"
    android:orientation="vertical"
    >
</LinearLayout>

</ScrollView>

<CheckBox
    android:id="@+id/mainmenu_cb1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/mainmenu_add_btn"
    android:text="@string/mainmenu_cb1" 
    />

<Button
    android:id="@+id/mainmenu_add_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerInParent="true"
    android:layout_gravity="center_horizontal"
    android:onClick="onClick"
    android:text="@string/tpl_new_template" 
    />

</RelativeLayout>
